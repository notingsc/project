/* pages/car/car.wxss */
.swiperTab {
  width: 100%;
  height: 400rpx;
  background: #fff;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tab-item {
  flex: 1;
  font-size: 30rpx;
  display: inline-block;
  color: #777777;
}

.on {
  color: #0FAC8A;
  border-bottom: 5rpx solid #0FAC8A;
}

.swiper {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper view {
  text-align: center;
  padding-top: 50rpx;
  font-size: 30rpx;
}
.list {
  column-count: 2;
  column-gap: 30rpx;
  padding: 30rpx;
  /* column-width:50%, */
}

.list-wape {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 10px;
  box-sizing: border-box;
  break-inside: avoid;
}

.list-item {
  padding: 20rpx;
}

.list-img {
  width: 100%;
  height: 400rpx;
  background: #0FAC8A;
  margin-bottom: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.list-name {
  font-size: 30rpx;
}

.list-num {
  font-size: 26rpx;
  color: #777777;
  margin-right: 70rpx;
}